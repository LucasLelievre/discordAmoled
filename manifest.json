{
    "name": "Amoled Discord",
    "author": "Lucas Leli√®vre",
    "description": "Sets discord to the amoled theme",
    "icons": {
        "48": "icons/icon.svg",
        "96": "icons/icon.svg"
    },
    "homepage_url": "https://github.com/LucasLelievre/discordAmoled",
    "manifest_version": 3,
    "version": "1.2",
    "browser_specific_settings": {
        "gecko": {
            "id": "amoled-discord@lucaslelievre.com",
            "strict_min_version": "102.0"
        }
    },
    "host_permissions": [
        "*://*.discord.com/*"
    ],
    "permissions": [
        "scripting"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "page_action": {
        "browser_style": true,
        "default_icon": "icons/icon.svg",
        "default_title": "Toggle amoled"
    }
}